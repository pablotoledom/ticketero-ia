      "item": [
        {
          "name": "Flujo Completo - Crear y Consultar",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generar datos aleatorios para el test",
                  "const randomId = Math.floor(Math.random() * 90000000) + 10000000;",
                  "const randomPhone = '9' + Math.floor(Math.random() * 100000000);",
                  "",
                  "pm.collectionVariables.set('testNationalId', randomId.toString());",
                  "pm.collectionVariables.set('testPhone', randomPhone);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Ticket created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "// Guardar UUID para consulta posterior",
                  "const jsonData = pm.response.json();",
                  "pm.collectionVariables.set('testTicketUuid', jsonData.identificador);",
                  "",
                  "// Hacer consulta inmediata del ticket creado",
                  "setTimeout(() => {",
                  "    pm.sendRequest({",
                  "        url: pm.collectionVariables.get('baseUrl') + '/api/tickets/' + jsonData.identificador,",
                  "        method: 'GET'",
                  "    }, (err, response) => {",
                  "        pm.test('Ticket consultation successful', function () {",
                  "            pm.expect(response.code).to.eql(200);",
                  "        });",
                  "        ",
                  "        pm.test('Ticket data matches', function () {",
                  "            const consultData = response.json();",
                  "            pm.expect(consultData.identificador).to.eql(jsonData.identificador);",
                  "            pm.expect(consultData.numero).to.eql(jsonData.numero);",
                  "        });",
                  "    });",
                  "}, 100);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
